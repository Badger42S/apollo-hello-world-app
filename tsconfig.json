{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "removeComments": true,
    "target": "es6",
    "outDir": "./dist",
    "baseUrl": "./src",
    "forceConsistentCasingInFileNames": true
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src/**/*.*"],
  "exclude": ["node_modules", "dist"]
}
